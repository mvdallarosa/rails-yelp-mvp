<div class="card">
  <div class="card-body">
    <h5 class="card-title"> <%= @restaurant.name %> </h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.address %></h6>
    <ul class="list-group mb-3 mt-4">
      <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item d-flex align-items-center">
        <%= review.content %>
        <span class="badge badge-primary badge-pill ml-2"><%= review.rating %></span>
      </li>
      <% end %>
    </ul>
    <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
    <%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %> |
    <%= link_to 'Back', restaurants_path %>
    <p> <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: 'btn btn-light mt-3' %> </p>
  </div>
</div>
